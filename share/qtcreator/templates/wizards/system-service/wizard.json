{
    "version": 1,
    "supportedProjectTypes": [ "CMakeProjectManager.CMakeProject", "Qbs.QbsProject", "Qt4ProjectManager.Qt4Project" ],
    "id": "Q.SystemdService",
    "category": "H.Project",
    "trDescription": "Creates a system service",
    "trDisplayName": "System service",
    "trDisplayCategory": "Other Project",
    "icon": "icon.png",
    "enabled": "%{JS: [ %{Plugins} ].indexOf('QmakeProjectManager') >= 0 || [ %{Plugins} ].indexOf('QbsProjectManager') >= 0 || [ %{Plugins} ].indexOf('CMakeProjectManager') >= 0}",

"options":
    [
        { "key": "ProFile", "value": "%{JS: Util.fileName('%{ProjectDirectory}/%{ProjectName}', 'pro')}" }
    ],

    "pages":
    [
        {
            "trDisplayName": "Project Location",
            "trShortTitle": "Location",
            "typeId": "Project"
        },
        {
            "trDisplayName": "Kit Selection",
            "trShortTitle": "Kits",
            "typeId": "Kits",
            "enabled": "%{JS: ! %{IsSubproject}}",
            "data": {
                "projectFilePath": "%{ProFile}"

            }
        },
        {
            "trDisplayName": "Project Settings",
            "trShortTitle": "Project Settings",
            "typeId": "Fields",
            "data": [
                {
                    "name": "CompanyName",
                    "type": "LineEdit",
                    "trDisplayName": "Company name:",
                    "data" :
                    {
                        "trText": "ru.sailfish"
                    }
                },
                {
                    "name": "Description",
                    "type": "TextEdit",
                    "trDisplayName": "Description:",
                    "data" :
                    {
                        "trText": "Short description of my Systemd Service"
                    }
                },
                {
                    "name": "ServiceType",
                    "type": "ComboBox",
                    "trDisplayName": "Service type:",
                    "data" :
                    {
                        "items": [ "simple", "forking", "oneshot", "notify", "dbus", "idle" ]
                    }
                }
            ]
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Summary",
            "typeId": "Summary"
        }
    ],
    "generators":
    [
        {
            "typeId": "File",
            "data":
            [
                {
                    "source": "template.pro",
                    "target": "%{ProFile}",
                    "openAsProject": true
                },
                {
                    "source": "src/main.cpp",
                    "target": "src/main.cpp",
                    "openInEditor": true
                },
                {
                    "source": "src/template.cpp",
                    "target": "src/%{ProjectName}.cpp"
                },
                  {
                    "source": "src/template.h",
                    "target": "src/%{ProjectName}.h"
                },
                {
                    "source": "dbus/template.service",
                    "target": "dbus/%{CompanyName}.%{ProjectName}.service",
                    "condition": "%{JS: '%{ServiceType}' === 'dbus'}",
                    "openInEditor": true
                },
                {
                    "source": "systemd/template.service",
                    "target": "systemd/%{ProjectName}.service"
                }
            ]
        }
    ]
}
